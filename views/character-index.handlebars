<!-- MAIN CONTENT -->
<section class="characters text-center">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- All Characters Content -->
                <div class="play">
                    <h2 class="title">All Characters</h2>
                    <div class="container">
                        <div class="row">
                            {{#each characters}}
                            <div class="col-md-4">
                                <div class="card p-2 m-2">
                                    <div class="card-body">
                                        <h5 class="lead card-title">{{this.name}}</h5>
                                        <a href="/characters/{{this._id}}" class="btn btn-primary btn-md">View Character</a>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>    
                </div>
            </div>
        </div>
    </div>
</section>